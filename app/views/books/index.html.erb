<% if flash[:notice]%>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="body">
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td> <%= book.title %> </td>
        <td> <%= book.body %></td>
        <td> <%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
      <% end %>
    </tbody>
  </table><br>

  <h3>New book</h3><br>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> error prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <br>

  <%= form_with model: @book do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %>
    <br><%= f.submit 'Create Book' %></br>
  <% end %>
</div>